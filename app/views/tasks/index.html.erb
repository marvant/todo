<h1>My TODO List</h1>
<%= link_to "Add Task", new_task_path %><br><br>
<h2>Open tasks</h2>

<% @open_tasks.each do |task| %>
	<%= link_to task.title, task_path(task) %> - 
	<%= task.deadline %> - 
	<%= link_to 'edit', edit_task_path(task) %>
<% end %>

<h2>Completed tasks</h2>
<% @completed_tasks.each do |task| %>
	<%= link_to task.title, task_path(task) %> - 
	<%= task.deadline %> - 
	<%= link_to 'edit', edit_task_path(task) %>
<% end %>