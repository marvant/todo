<h1>New Task</h1>
<%= form_for @task do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :deadline %><br>
    <%= f.date_field :deadline %>
  </p>
 
  <p>
  	<%= f.label :detail %><br>
  	<%= f.text_area :detail %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>