<h1>New Task</h1>
<%= form_for @task do |f| %>
  <p>
    <%= f.label :title %>
    <% if @task.errors[:title].any? %>
      <%= @task.errors[:title][0] %>
    <% end %>
    <br><%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :deadline %>
    <% if @task.errors[:deadline].any? %>
      <%= @task.errors[:deadline][0] %>
    <% end %>
    <br><%= f.date_field :deadline %>
  </p>
 
  <p>
  	<%= f.label :detail %><br>
  	<%= f.text_area :detail %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>